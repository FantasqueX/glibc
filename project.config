[hooks]
        from-domain = sourceware.org
        mailinglist = glibc-cvs@sourceware.org

        # We do not want to force a maximum line length in commit
        # revision logs, as they get in the way of copy-pasting
        # debugging session, error messages, logs, etc.
        max-rh-line-length = 0

	# Allow UTF-8 in commit messages, instead of requiring
	# them to use ISO-8859-15.
	no-rh-character-range-check = true

        # We allow a 5MiB email diff maximum.
        max-email-diff-size = 5242880

        # Reject merge commits on a certain number of branches:
        #  - on master: We request that people rebase their changes
        #    before pushing instead (merge commits tend to confuse
        #    git newcommers).
        #  - on release: We apply the same policy to release branches
        #    as we have on master.
        reject-merge-commits = refs/heads/master,refs/heads/release/.*

        # The URL where we can inspect the commit, inserted in the commit
        # notification email, and also copy sent to the file-commit-cmd.
        commit-url = "https://sourceware.org/git/gitweb.cgi?p=glibc.git;h=%(rev)s"

        # Allow rebasing private branches.
        allow-non-fast-forward = (?!master|release.*)

        # Run a minimal style-checker.  Only a subset of file names is
	# actually checked for whitespace issues.  See the script for
	# details.
        style-checker = /git/glibc.git/hooks-bin/style_checker

        # Send a copy to bugzilla if a commit has a PR number in it.
	# The script is a wrapper around
	# /sourceware/infra/bin/email-to-bugzilla.
        file-commit-cmd = "/git/glibc.git/hooks-bin/email-to-bugzilla-filtered"

	# The script that calls the irker (IRC notification of new
        # commits).  Only master and release branches apply.
        post-receive-hook = /git/glibc.git/hooks-bin/post-receive

	# Reject patches with mailing lists as the source address.
	commit-extra-checker = /git/glibc.git/hooks-bin/commit_checker
